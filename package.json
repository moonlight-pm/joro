{
  "name": "joro",
  "productName": "Joro",
  "description": "A web browser",
  "author": {
    "name": "moonlight(pm)",
    "email": "hello@moonlight.pm"
  },
  "version": "0.0.8",
  "private": true,
  "license": "UNLICENSED",
  "main": "server/index.js",
  "scripts": {
    "client": "webpack-dev-server --config client/webpack.config.js",
    "server": "electron .",
    "client:build": "webpack --config client/webpack.config.js",
    "server:build": "webpack --config server/webpack.config.js",
    "build": "NODE_ENV=production yarn client:build && yarn server:build && cp build/package.json dist/pack && electron-builder",
    "deploy": "NODE_ENV=production yarn client:build && yarn server:build && cp build/package.json dist/pack && electron-builder --publish always"
  },
  "build": {
    "directories": {
      "app": "dist/pack"
    },
    "appId": "pm.moonlight.joro",
    "productName": "Joro",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "mac": {
      "icon": "build/logo.png",
      "gatekeeperAssess": false,
      "target": "zip",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist"
    },
    "afterSign": "build/after-sign.js"
  },
  "dependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@ctrl/tinycolor": "^3.1.4",
    "babel-loader": "^8.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "bitwarden": "naturalethic/bitwarden",
    "cheerio": "^1.0.0-rc.3",
    "chokidar": "^3.4.2",
    "dot-prop": "^5.2.0",
    "dotenv": "^8.2.0",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.0.0",
    "got": "^11.5.2",
    "hotkeys-js": "^3.8.1",
    "html-webpack-plugin": "^4.3.0",
    "json-dry": "^1.0.12",
    "lodash": "^4.17.20",
    "lodash-webpack-plugin": "^0.11.5",
    "material-colors": "^1.2.6",
    "minimist": "^1.2.5",
    "overmind": "^25.0.1",
    "overmind-devtools": "^26.0.1",
    "overmind-react": "^26.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-split": "^2.0.9",
    "scrape-it": "^5.2.4",
    "shelljs": "^0.8.4",
    "styled-components": "^5.1.1",
    "url-parse-lax": "^4.0.0",
    "uuid": "^8.3.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
